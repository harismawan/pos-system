# Database (shared with backend)
DATABASE_URL="postgresql://pos_user:pos_password@localhost:5432/pos_db?schema=public"

# Redis
REDIS_URL="redis://localhost:6379"
REDIS_HOST="localhost"
REDIS_PORT="6379"

# Worker Configuration
WORKER_CONCURRENCY="5"
