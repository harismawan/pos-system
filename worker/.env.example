# Database (shared with backend)
DATABASE_URL="postgresql://postgres:postgres@0.0.0.0:5432/pos_db?schema=public"

# Redis
REDIS_URL="redis://localhost:6379"

# Worker Configuration
WORKER_CONCURRENCY="5"
WORKER_MAX_RETRIES="3"

# Logging
LOG_LEVEL="info"
NODE_ENV="development"

# Email (SMTP) - Required for email notification jobs
SMTP_HOST="smtp.example.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER=""
SMTP_PASSWORD=""
SMTP_FROM="POS System <noreply@pos-system.local>"

# Prometheus Metrics
METRICS_ENABLED="true"              # Enable/disable metrics server
METRICS_PORT="9100"                 # Metrics HTTP server port

# Loki Log Aggregation
LOKI_ENABLED="true"                # Enable/disable Loki log shipping
LOKI_URL="http://loki:3100"         # Loki push API endpoint
LOKI_BATCH_SIZE="10"                # Number of log entries to batch before sending
LOKI_BATCH_INTERVAL="5000"          # Milliseconds between batch sends
