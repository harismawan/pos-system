{
  "name": "@pos-system/backend",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/server.js",
    "start": "bun src/server.js",
    "test": "bun test",
    "db:migrate": "bun prisma migrate dev --config prisma/prisma.config.js",
    "db:migrate:deploy": "bun prisma migrate deploy --config prisma/prisma.config.js",
    "db:seed": "bun prisma db seed --config prisma/prisma.config.js",
    "db:studio": "bun prisma studio --config prisma/prisma.config.js",
    "db:generate": "bun prisma generate --config prisma/prisma.config.js"
  },
  "prisma": {
    "seed": "bun prisma/seed.js"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.4.0",
    "@prisma/adapter-pg": "^7.1.0",
    "@prisma/client": "^7.1.0",
    "bcryptjs": "^3.0.3",
    "elysia": "^1.4.19",
    "jsonwebtoken": "^9.0.3",
    "pg": "^8.16.3",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3",
    "prom-client": "^15.1.3"
  },
  "devDependencies": {
    "prisma": "^7.1.0"
  }
}
